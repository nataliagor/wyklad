<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DrugDetails">

    <TextView
        android:id="@+id/textViewDrugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:text="@string/nazwa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDrugDresciption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/opis"
        app:layout_constraintStart_toStartOf="@+id/textViewDrugName"
        app:layout_constraintTop_toBottomOf="@+id/textViewDrugName" />

    <TextView
        android:id="@+id/editTextDrugNameData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDrugName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDrugName" />

    <TextView
        android:id="@+id/editTextDrugaDescriptionData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDrugDresciption"
        app:layout_constraintEnd_toEndOf="@+id/editTextDrugNameData"
        app:layout_constraintStart_toStartOf="@+id/editTextDrugNameData" />

</androidx.constraintlayout.widget.ConstraintLayout>